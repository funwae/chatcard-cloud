{
  "name": "@chatcard/proof",
  "version": "0.1.0",
  "description": "SDK for signing, verifying, and embedding ChatCard proofs",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc --project tsconfig.cjs.json",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "chatcard",
    "proof",
    "attribution",
    "cryptographic",
    "signature"
  ],
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "multiformats": "^12.1.3",
    "zod": "^3.23.8",
    "parse5": "^7.1.2"
  },
  "peerDependencies": {
    "undici": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/parse5": "^7.0.0",
    "typescript": "^5.3.3"
  }
}

